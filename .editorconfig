# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double
max_line_length = 88
indent_style = tab
indent_size = 4

[*.{rst,md,markdown}]
indent_style = tab
indent_size = 4

[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = tab
indent_size = 2

[*.{html,css,sass,scss}]
indent_style = space
indent_size = 2

[*.{js,coffee}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
